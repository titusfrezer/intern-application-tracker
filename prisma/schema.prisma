generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["linux-musl-arm64-openssl-3.0.x"]

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  password String
  github_link String?
  linkedin_link String?
  applications Application[]
}

model Application {
  id Int @default(autoincrement()) @id
  progression STATUS @default(SUBMITTED)
  applicant User @relation(fields:[applicant_id], references: [id])
  applicant_id Int
  applying_for String
  message String
}

enum STATUS {
  SUBMITTED
  POOL
  REJECTED
  ACCEPTED
}